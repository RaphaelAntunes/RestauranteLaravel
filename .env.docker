# ===========================================
# CONFIGURAÇÃO DOCKER - PRODUÇÃO
# ===========================================
# Copie para .env e ajuste as senhas!

APP_NAME="Super Pizza"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://SEU_IP:40123

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# ===========================================
# BANCO DE DADOS
# Host = nome do container (mysql)
# Porta interna = 3306 (dentro da rede Docker)
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=restaurante
DB_USERNAME=restaurante
DB_PASSWORD=SuaSenhaSegura123!
DB_ROOT_PASSWORD=SuaSenhaRootSegura123!

# ===========================================
# REDIS
# Host = nome do container (redis)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# CACHE, SESSÃO E FILAS
# ===========================================
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=database

SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# ===========================================
# LOGS
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# OUTROS
# ===========================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ===========================================
# EMAIL (configure depois)
# ===========================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@exemplo.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"
